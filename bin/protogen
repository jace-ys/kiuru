#!/usr/bin/env bash

LANG=""
PROTOPATH=""
TARGETS=""
GATEWAY=false
GOPATH=$(go env GOPATH)

while getopts "l:p:t:g" opt; do
  case $opt in
    l )
      LANG=$OPTARG
      ;;
    p )
      PROTOPATH=$OPTARG
      ;;
    t )
      TARGETS=$OPTARG
      ;;
    g )
      GATEWAY=true
      ;;
  esac
done

if [ "$LANG" = "" ] || [ "$PROTOPATH" = "" ] || [ "$TARGETS" = "" ]; then
  echo "Usage: protogen [-l] [language] [-p] [path to proto folder] [-t] [space-separated targets] [-g]"
  exit 1
fi

IFS=' ' read -ra T <<< ${TARGETS}
for target in "${T[@]}"; do
  version=${target%%/*}
  outdir=api/${target##*/}

  mkdir -p ${outdir}
  protoc \
    -I/usr/local/include \
    -I${PROTOPATH}/${version} \
    -I${GOPATH}/src/github.com/grpc-ecosystem/grpc-gateway/third_party/googleapis \
    --${LANG}_out=plugins=grpc:${outdir} \
    ${PROTOPATH}/${target}.proto
  echo "==> Generated gRPC protobuf definitions from ${target}.proto"

  if [ "$GATEWAY" = true ]; then
    protoc \
      -I/usr/local/include \
      -I${PROTOPATH}/${version} \
      -I${GOPATH}/src/github.com/grpc-ecosystem/grpc-gateway/third_party/googleapis \
      --grpc-gateway_out=logtostderr=true:${outdir} \
      ${PROTOPATH}/${target}.proto
    echo "==> Generated gateway protobuf definitions from ${target}.proto"
  fi
done
